<div class="container">
    <div class="row">
        <div class="col-8">       
        <h3 class="my-4 w-100">Add Employee</h3>
        <form action="/employee" method="post">
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Email</label>
              <input type="email" class="form-control" id="exampleInputPassword1" name="email">
            </div>
            <div class="form-group">
                <label for="exampleCheck1">Phone</label>
                <input type="text" class="form-control" id="exampleCheck1" name="phone">
            </div>
            <div class="form-group">
                <label for="tasks">Tasks</label>
                <select class="custom-select" name="task" multiple>
                   <% tasks.forEach(el => { %>
                    <option value=<%= el.id %>><%= el.name %></option>
                   <% }) %>
                  </select>
            </div>
            <small class="d-block mb-4">Use ctrl+mouse click to select multiple choices</small>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
    </div>
</div>